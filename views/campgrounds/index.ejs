<% layout('layouts/boilerplate') %> 
<h1>Campgrounds</h1>
<hr>
<% for (let camp of camps){ %>
    <div class="card my-3 shadow p-3 mb-5 bg-white rounded">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= camp.image %> " alt="" class="img-fluid">
            </div>
            <div class="col-md-6 m-2">
                <h5 class="card-title"><%= camp.title %> </h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location %> </small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title%> </a>
            </div>
        </div>
    </div>
<% } %>




<a class="btn btn-success" href="/campgrounds/new">Add new camp</a>


